<Window x:Class="XamlWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:XamlWpf"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <Button  HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="100">
            <Button.Foreground>Black</Button.Foreground>
            <Button.Background>
                <LinearGradientBrush StartPoint="0,0.5" EndPoint="1, 0.5" >
                    <GradientStop Color="Red" Offset="0.0" />
                    <GradientStop Color="White" Offset="0.4" />
                    <GradientStop Color="White" Offset="0.6" />
                    <GradientStop Color="Red" Offset="1.0" />
                </LinearGradientBrush>
            </Button.Background>
            <StackPanel Orientation="Horizontal">
                <Image Width="70" Height="70" Source="widzew.png" />
                <TextBlock FontSize="16" Margin="10">
                   <Run Foreground="Yellow">Content</Run><LineBreak/>
                    = <LineBreak/>
                    "Zdzisio"
                </TextBlock>
            </StackPanel>
        </Button>

    </Grid>
</Window>
